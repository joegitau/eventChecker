extend base
block content
  .section
    .container
      .row.align-items-center.py-4
        .col-lg-6.col-7
          //- h4.text-primary.d-inline-block.mb-0 Event
          nav.d-none.d-md-inline-block.ml-md-4(aria-label='breadcrumb')
            ol.breadcrumb.breadcrumb-links.breadcrumb-dark
              li.breadcrumb-item
                a(href='/')
                  i.fas.fa-home
              li.breadcrumb-item
                a(href='/users/me') My Events
              li.breadcrumb-item.active(aria-current='page') Event
        .col-lg-6.col-5.text-right
          a.btn.btn-sm.btn-default(href=`/events/${event._id}/new-guest`) Add Guest
          a.btn.btn-sm.btn-default(href=`/events/${event._id}/update-event`) Edit Event
      .row
        .col-lg-10.ml-auto.mr-auto
          .card.card-profile.card-horizontal.card-event
            .row
              .col-xl-7
                .card-image.no-mask
                  a(href='javascript:;')
                    img.img(src='/img/comete-coco.jpg')
              .col-xl-5
                .card-body.mt-3                 
                  h4.card-category.text-gray.text-1 Title
                  h3.card-title= event.title
                  br
                  h4.card-category.text-gray.text-1 Venue
                  h3.card-title= event.venue
                  br
                  .row
                    .col-lg-6
                      h4.card-category.text-gray.text-1 Total Guests
                      if guests.length >= 0
                        h4.card-title= `${guests.length} guests`
                      else 
                        h4.card-title 0 guests
                    .col-lg-6
                      h4.card-category.text-gray.text-1 Guests Present
                      h4.card-title 31
      .row.align-items-center
        .col-lg-12.mx-auto
          .card
            .card-header.border-bottom.pb--1
              .row
                .col-lg-6
                  form#search_guests.form-inline.mr-sm-3
                    .form-group.mb-0
                      .input-group.input-group-alternative.input-group-merge
                        .input-group-prepend
                          span.input-group-text
                            i.fas.fa-search
                        input.form-control(placeholder='Search guests...', type='text')
                .col-lg-6
                  | Other filters
            .card-body
              .table-responsive
                table.table.table-hover.table-striped
                  thead.text-primary
                    tr
                      th.text-center
                        | Availability
                      th.text-center
                        | Name
                      th.text-center
                        | Email
                      th.text-center
                        | Phone
                      th.text-center
                        | Company
                      th.text-center
                        | Status
                      th.text-center
                        i.fas.fa-cog
                  tbody
                    each guest in guests
                      tr.text-primary
                        if guest.isArrived
                          td.text-center Checked In
                        else 
                          td.text-center Absent
                        td.text-center
                          a(href='')= guest.name
                        td.text-center= guest.email
                        td.text-center= guest.phone
                        td.text-center= guest.company
                        if guest.isVip
                          td.text-center VIP
                        else
                          td.text-center Guest
                        td.text-right
                          a(href='/')
                            i.fas.fa-eye
                          a(href='/')
                            i.fas.fa-trash
                        


